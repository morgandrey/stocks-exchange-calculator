<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.stockexchangecalculator.TitleFragment"
        android:label="@string/app_name"
        app:startDestination="@id/action_titleFragment_to_stockFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_stockFragment"
            app:destination="@id/stockFragment" />
    </fragment>
    <fragment
        android:id="@+id/stockFragment"
        android:name="com.example.stockexchangecalculator.screens.stocks.StockFragment"
        android:label="Добавление новых акций"
        tools:layout="@layout/fragment_stock" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.stockexchangecalculator.screens.auth.AuthFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_authFragment_to_titleFragment"
            app:destination="@id/titleFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.stockexchangecalculator.screens.register.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register"/>
</navigation>